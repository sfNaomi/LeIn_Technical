<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>OrderNumber</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>FinanceTeamQueue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <emailTemplate>unfiled$public/OrderRequiringApproval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>
            OR(
				AND(
				    OR(
                        ISPICKVAL(Account.CreditStatus__c, &apos;On Hold&apos;), 
                        AND(
                            Account.AvailableCredit__c &lt; TotalAmount, 
                            Account.Parent.AvailableCustomerCredit__c &lt; TotalAmount
                        )
                    ),
                    (RecordType.DeveloperName = &quot;ECommerceOrder&quot; || RecordType.DeveloperName = &quot;EDIOrder&quot; || RecordType.DeveloperName = &quot;FieldDirectOrder&quot;)
                ),
                AND(
                    Account.AvailableCredit__c &lt; TotalAmount, 
                    Account.Parent.AvailableCustomerCredit__c &lt; TotalAmount, 
                    RecordType.DeveloperName = &quot;TelesalesOrder&quot;
                )
			)
        </formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>IsAprovedEqualsTrue</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UpdateOrderStatusToActivated</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>LeaveAsAwaitingApproval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RejectedOrder</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>UpdateOrderStatusToAwaitingApproval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Order Approval Process Finance Team</label>
    <processOrder>3</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
